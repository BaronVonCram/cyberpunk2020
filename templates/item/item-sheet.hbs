<form class="{{cssClass}}" autocomplete="off">
    <header class="flexrow nowrap">
        <div class="flexcol">
            <h1 class="title fillwidth nogrow"><input class="field-value" name="name" type="text" value="{{item.name}}" placeholder={{cLocal 'ItemName'}}/></h1>
            <textarea class="description" name="data.text" placeholder="{{cLocal 'Summary'}}">{{data.text}}</textarea>
        </div>
        <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="settings">{{cLocal 'Settings'}}</a>
        <a class="item" data-tab="settings">{{cLocal 'Description'}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Attributes Tab --}}
        <div class="tab" data-group="primary" data-tab="combat">
            
        </div>
        
        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="details">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
        </div>

    </section>
</form>