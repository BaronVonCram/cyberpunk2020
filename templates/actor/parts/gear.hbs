<div class="field-list no-wrap">
    <div class="field">
        <label for="data.eurobucks">{{CPLocal "Eurobucks"}}</label>
        <input name="data.eurobucks" type="number" value="{{data.eurobucks}}">
    </div>
    <div class="field">
        <label for="data.carryWeight">{{CPLocal "Weight"}}</label>
        <input class="not-editable" name="data.carryWeight" type="number" value="{{data.carryWeight}}" readonly>
    </div>
</div>

{{#if (equals items.length 0)}}
    <div class="inactive">Drag items here to add (for now)</div>
{{/if}}
<div class="field-list">
    {{#each gear.weapons as |weapon|}}
        <div class="field gear item-edit" data-item-id="{{weapon._id}}">
            <div class="field-image roll fire-weapon action" style="background-image: url({{weapon.img}})" data-item-id="{{weapon._id}}"></div>
            <label>{{weapon.name}}</label>
            <span class="flex-pad"></span>
            <span>
                <p class="inactive">{{type}}</p>
            </span>
            <span class="item-delete" data-item-id="{{_id}}">X</span>
        </div>
    {{/each}}
    {{#each gear.armor}}
        <div class="field gear item-edit" data-item-id="{{_id}}">
            <div class="field-image item-roll action" style="background-image: url({{img}})" data-item-id="{{_id}}"></div>
            <label class="name">{{name}}</label>
            <span class="flex-pad"></span>
            <span>
                <label class="inactive">{{type}}</label>
            </span>
            <span class="item-delete" data-item-id="{{_id}}">X</span>
        </div>
    {{/each}}
    {{#each gear.misc}}
        <div class="field gear item-edit" data-item-id="{{_id}}">
            <div class="field-image item-roll action" style="background-image: url({{img}})" data-item-id="{{_id}}"></div>
            <label class="name">{{name}}</label>
            <span class="flex-pad"></span>
            <span>
                <label class="inactive">{{type}}</label>
            </span>
            <span class="item-delete " data-item-id="{{_id}}">X</span>
        </div>
    {{/each}}
</div>